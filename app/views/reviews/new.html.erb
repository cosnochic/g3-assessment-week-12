<h1> New Review </h1>

<hr>

<%= form_for @review do |f| %>

<div class="form-group">
   <%= f.collection_select :movie_id, Movie.all, :id, :name %>
</div>

<div class="form-group">
<%= f.label :title %>
<%= f.text_field :title %>
</div>

<div class="form-group">
<%= f.label :body %>
<%= f.text_area :body %>
</div>

<div class="form-group">
<%= f.submit %>
</div>

<% end %>

<strong> <h1> Register! </h1> </strong>

<hr>
<%= form_for @user, url: '/signup' do |f| %>

<div>
   <%= f.label :username %>
   <%= f.text_field :username %>
</div>


<div>
   <%= f.label :password %>
   <%= f.text_field :password %>
</div>

<div>
   <%= f.label :password_confirmation %>
   <%= f.text_field :password_confirmation %>
</div>

<div>
   <%= f.submit%>
</div>

<% end %>
